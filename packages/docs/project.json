{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/docs",
  "projectType": "application",
  "implicitDependencies": ["client", "hljs-plugin"],
  "targets": {
    "contentlayer-build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "contentlayer build",
        "cwd": "packages/docs"
      }
    },
    "build": {
      "dependsOn": ["contentlayer-build"],
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "packages/docs",
        "outputPath": "packages/docs/dist"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/docs"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "docs:next-build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "docs:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "docs:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "docs:next-build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/docs/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/docs/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "vercel pull --yes",
          "vercel build",
          "vercel deploy --prebuilt"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
